<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:id="@+id/relativeLayoutNivelDos"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        tools:context=".losLevels.levelDos"
        tools:layout_editor_absoluteX="-60dp"
        tools:layout_editor_absoluteY="0dp">
        <TextView
            android:id="@+id/ordenarTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="18sp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp"/>

        <GridLayout
            android:id="@+id/gridLayoutLevelTwo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:columnCount="4"
            android:orientation="horizontal"
            android:rowCount="4">

            <ImageButton
                android:id="@+id/imageButton1"
                style="@style/PuzzleButton"
                android:src="@drawable/jeepeta1" />

            <ImageButton
                android:id="@+id/imageButton2"
                style="@style/PuzzleButton"
                android:src="@drawable/jeepeta2" />

            <ImageButton
                android:id="@+id/imageButton3"
                style="@style/PuzzleButton"
                android:src="@drawable/jeepeta3" />

            <ImageButton
                android:id="@+id/imageButton4"
                style="@style/PuzzleButton"
                android:src="@drawable/jeepeta4" />

            <ImageButton
                android:id="@+id/imageButton5"
                style="@style/PuzzleButton"
                android:src="@drawable/jeepeta5" />

            <ImageButton
                android:id="@+id/imageButton6"
                style="@style/PuzzleButton"
                android:src="@drawable/jeepeta6" />

            <ImageButton
                android:id="@+id/imageButton7"
                style="@style/PuzzleButton"
                android:src="@drawable/jeepeta7" />

            <ImageButton
                android:id="@+id/imageButton8"
                style="@style/PuzzleButton"
                android:src="@drawable/jeepeta8" />

            <ImageButton
                android:id="@+id/imageButton9"
                style="@style/PuzzleButton"
                android:src="@drawable/jeepeta9" />

            <ImageButton
                android:id="@+id/imageButton10"
                style="@style/PuzzleButton"
                android:src="@drawable/jeepeta10" />

            <ImageButton
                android:id="@+id/imageButton11"
                style="@style/PuzzleButton"
                android:src="@drawable/jeepeta11" />

            <ImageButton
                android:id="@+id/imageButton12"
                style="@style/PuzzleButton"
                android:src="@drawable/jeepeta12" />

            <ImageButton
                android:id="@+id/imageButton13"
                style="@style/PuzzleButton"
                android:src="@drawable/jeepeta13" />

            <ImageButton
                android:id="@+id/imageButton14"
                style="@style/PuzzleButton"
                android:src="@drawable/jeepeta14" />

            <ImageButton
                android:id="@+id/imageButton15"
                style="@style/PuzzleButton"
                android:src="@drawable/jeepeta15" />

            <ImageButton
                android:id="@+id/imageButton16"
                style="@style/PuzzleButton"
                android:src="@drawable/jeepeta16" />
        </GridLayout>
        <TextView
            android:id="@+id/intentosTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/gridLayoutLevelTwo"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp"
            android:text="Movimientos: 0"
            android:textSize="18sp" />

        <Button
            android:id="@+id/endFinButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/intentosTV"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp"
            android:text="HE TERMINADO!"
            app:backgroundTint="@color/lightgreen"
            app:cornerRadius="0dp" />
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>